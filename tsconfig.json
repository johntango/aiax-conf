{
  "compilerOptions": {
    /* Paths & module resolution */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    /* Strictness & type-checking */
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    /* Build ergonomics */
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    /* Source maps (useful for debugging in prod if needed) */
    "sourceMap": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}